<div class="card">
<div class="header">
<h4 class="title">Список Категорий</h4>
<p class="category"></p>
</div>
<div class="content table-responsive table-full-width">
<table class="table table-hover table-striped">
<thead>
<th>Название</th>
<th>Изображение</th>
<th>Управление</th>
</thead>
<tbody>
<% for category in @categories %>
<tr>
<td><%= category.title %></td>
<td>

<% if category.image %>
YES
<%else%>
NO
<%end%> 
</td>
<td>
<%= link_to 'Изменить', edit_admin_category_path(category), class: "btn btn--m"%>
<%= link_to 'Список услуг', admin_category_path(category), class: "btn btn--m"%>
</td>
</tr> 
<% end %>                                     
</tbody>
</table>

</div>
</div>
<%= link_to "Добавить новую категорию", new_admin_category_path, :class => 'btn btn-info btn-fill pull-left' %>
</div>