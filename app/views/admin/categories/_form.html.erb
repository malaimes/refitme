<%= form_for [:admin, @category] do |f| %>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, :class => 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :image %><br>
                <%= f.text_field :image, :class => 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :type %><br>
                <%= f.select :type_id, Type.all.collect { |p| [ p.title, p.id ] }, include_blank: true %>  
            </div>                                        
        </div>
    </div>
    <%= f.submit 'Сохранить', :class => 'btn btn-info btn-fill pull-right' %>
    <div class="clearfix"></div>
<% end %>