<div class="col-md-8">
  <div class="card">
    <div class="header">
      <h4 class="title">Список услуг</h4>
      <p class="category">Список услуг для <%= @category.title %></p>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <th>Название</th>
          <th>Цена, грн</th>
          <th>Уточнение</th>
          <th>Управление</th>
        </thead>
        <tbody>
        <% @category.units.order("created_at ASC").each do |unit| %>
          <tr>
            <td><%= unit.title %></td>
            <td><%= unit.price %></td>
            <td><%= unit.tooltip %></td>
            <td>
              <%= link_to "Изменить", edit_admin_category_unit_path(@category, unit), class: "btn btn--s"%>
              <%= link_to "Удалить", admin_category_unit_path(@category, unit), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn--s"%>
            </td>
          </tr> 
        <% end %>                                     
        </tbody>
      </table>
    </div>
  </div>
<%= link_to "Добавить услугу", new_admin_category_unit_path(@category), :class => 'btn btn-info btn-fill pull-left' %>
</div>
<div class="col-md-4">
  <div class="card card-user">
    <div class="text-center">
      <%=image_tag(@category.image) %>
    </div>
  </div>
</div>