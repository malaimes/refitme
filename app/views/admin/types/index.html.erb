<div class="card">
<div class="header">
<h4 class="title">Список Девайсов</h4>
<p class="category"></p>
</div>
<div class="content table-responsive table-full-width">
<table class="table table-hover table-striped">
<thead>
<th>Название</th>
<th>Управление</th>
</thead>
<tbody>
<% for type in @types %>
<tr>
<td><%= type.title %></td>
<td>
<%= link_to '<i class="fa fa-refresh"></i> Изменить'.html_safe, edit_admin_type_path(type), class: "btn btn--m"%>
<%= link_to '<i class="fa fa-times"></i> Удалить'.html_safe, admin_type_path(type), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn--m" %>
</td>
</tr> 
<% end %>                                     
</tbody>
</table>

</div>
</div>
<%= link_to "Добавить новую категорию", new_admin_type_path, :class => 'btn btn-info btn-fill pull-left' %>
</div>