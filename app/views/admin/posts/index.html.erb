<%= link_to "Добавить новый пост", new_admin_post_path, :class => 'btn btn-info btn-fill pull-right' %>

<div class="card">
<div class="header">
<h4 class="title">Posts Table</h4>
<p class="category">All published posts</p>
</div>
<div class="content table-responsive table-full-width">
<table class="table table-hover table-striped">
<thead>
<th>Title</th>
<th>Created at</th>
<th>Created by</th>
<th>Управление</th>
</thead>
<tbody>
<% for post in @posts %>
<tr>
<td><%= truncate(post.title, :length => 30) %></td>

<td><%= post.created_at.strftime("at %I:%M%p on %m/%d/%Y") %></td>
<td><%= post.user.username%></td>
<td>
  <%= link_to 'Изменить', edit_admin_post_path(post), class: "btn btn--m"%>
  <%= link_to 'Детальнее', admin_post_path(post), class: "btn btn--m"%>
  <%= link_to 'Удалить'., admin_posts_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn--m" %>
</td>
</tr> 
<% end %>                                     
</tbody>
</table>

</div>
</div>
</div>