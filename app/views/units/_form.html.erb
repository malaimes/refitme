<%= form_for([@category, @category.units.build]) do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>
  <p>
    <%= f.label :tooltip %><br>
    <%= f.text_area :tooltip %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>