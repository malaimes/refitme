<% title "Регистрация на сайте" %>
<div class="login">
<h2>Sign up</h2>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <div class="row">
    <div class="small-11 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :username, for: "right-label", class: "right inline" %>
        </div>
        <div class="small-9 columns">
          <%= f.text_field :username, id: "right-label", placeholder: "Введите логин" %>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="field">
    <div class="row">
    <div class="small-11 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :email, for: "right-label", class: "right inline" %>
        </div>
        <div class="small-9 columns">
          <%= f.email_field :email, id: "right-label", placeholder: "Введите e-mail" %>
        </div>
      </div>
    </div>
  </div>
  </div>
<div class="field">
<div class="row">
    <div class="small-11 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :password, for: "right-label", class: "right inline" %>
        </div>
        <div class="small-9 columns">
          <%= f.password_field :password, autocomplete: "off", id: "right-label", placeholder: "Введите пароль" %>
        </div>
      </div>
    </div>
</div>

  </div>
<div class="field">
<div class="row">
    <div class="small-11 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label "Confirm", for: "right-label", class: "right inline" %>
        </div>
        <div class="small-9 columns">
          <%= f.password_field :password_confirmation, autocomplete: "off", id: "right-label", placeholder: "Подтвердите пароль" %>
        </div>
      </div>
    </div>
</div>

  </div>

    <div class="row">

    <div class="small-3 columns">
   
    </div>
    <div class="small-8 columns">
     <%= f.submit "Sign Up", class: "btn btn--m btn--gray" %>
    </div>

    </div>


<% end %>
</div>












