<% title "Вход в систему" %>
<div class="login">
<h2>Sign In</h2>
<hr>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="row">
    <div class="small-11 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :email, for: "right-label", class: "right inline" %>
        </div>
        <div class="small-9 columns">
          <%= f.email_field :email, id: "right-label", placeholder: "Введите e-mail" %>
        </div>
      </div>
    </div>
  </div>
  </div>



  <div class="field">
<div class="row">
    <div class="small-11 columns">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :password, for: "right-label", class: "right inline" %>
        </div>
        <div class="small-9 columns">
          <%= f.password_field :password, autocomplete: "off", id: "right-label", placeholder: "Введите пароль" %>
        </div>
      </div>
    </div>
  </div>

  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

    <div class="row">

    <div class="small-3 columns">
    <%= f.submit "Log in", class: "btn btn--m btn--gray" %>
    </div>
    <div class="small-8 columns">
    <%= link_to "Forgot pass?", new_password_path(resource_name), class: "btn btn--m btn--gray" %>
    </div>

    </div>


<% end %>
</div>

