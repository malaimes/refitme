<% title @category.seo_title %>
<% meta_tag :description, @category.seo_description %>
<% meta_tag :keywords, @category.seo_keywords %>

<section class="content">
  <article>

    <div class="row clearfix">

      <div class="small-3 large-3 columns">
        <div style="margin-top: 50px;">
          <%= image_tag(@category.image, alt: "ремонт #{@category.title} Киев".html_safe)  %>
        </div>
      </div>

      <div class="small-9 large-9 columns">
        <p id="intro">Прайс-лист на ремонт</p>
        <div class="columns-price">
          <% @category.units.order("created_at ASC").each do |unit| %>
          <div class="unit-columns">
            <span class="left">
              <span class="service_name"><%= truncate(unit.title, :length => 38) %></span>
            </span>
            <span class="right"><%= unit.price %> грн.</span>    
          </div>
          <%end%>
        </div>
        <div class="clear"></div>
        <div class="head">
          <div class="note">Не нашли в списке свою неисправность?<br/>Звоните по номеру <span>(063) 603 51 87</span>, мы поможем!
          </div>
        </div>
      </div>
      
    </div>

  </article>
</section>

<%= render "categories/shared/callupper" %>